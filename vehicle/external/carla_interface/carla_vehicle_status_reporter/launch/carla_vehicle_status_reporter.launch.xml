<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- <arg name="carla_vehicle_status_reporter_param_path" default="$(find-pkg-share carla_vehicle_status_reporter)/config/carla_vehicle_status_reporter.param.yaml"/> -->
  <arg name="role_name" default="ego_vehicle"/> 
  <arg name="base_frame_id" default="base_link"/> 
  <arg name="max_steering_angle_deg" default="70.0"/> 

  <node pkg="carla_vehicle_status_reporter" exec="carla_vehicle_status_reporter_exe" name="carla_vehicle_status_reporter" output="screen">
    <!-- <param from="$(var carla_vehicle_status_reporter_param_path)"/> -->
    <param name="role_name" value="$(var role_name)"/>
    <param name="base_frame_id" value="$(var base_frame_id)"/>
    <param name="max_steering_angle_deg" value="$(var max_steering_angle_deg)"/>
  </node>
</launch>
