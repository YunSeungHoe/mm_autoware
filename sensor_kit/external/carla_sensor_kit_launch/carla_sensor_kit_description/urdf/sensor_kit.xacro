<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="sensor_kit_macro" params="parent x y z roll pitch yaw">
    <xacro:include filename="$(find velodyne_description)/urdf/VLP-16.urdf.xacro"/>
    <xacro:include filename="$(find vls_description)/urdf/VLS-128.urdf.xacro"/>
    <xacro:include filename="$(find imu_description)/urdf/imu_carla.xacro"/>
    <xacro:include filename="$(find camera_description)/urdf/monocular_camera.xacro"/>

    <xacro:arg name="gpu" default="false"/>
    <xacro:arg name="config_dir" default="$(find sample_sensor_kit_description)/config"/>

    <xacro:property name="sensor_kit_base_link" default="sensor_kit_base_link"/>

    <joint name="${sensor_kit_base_link}_joint" type="fixed">
      <origin rpy="${roll} ${pitch} ${yaw}" xyz="${x} ${y} ${z}"/>
      <parent link="${parent}"/>
      <child link="${sensor_kit_base_link}"/>
    </joint>
    <link name="${sensor_kit_base_link}">
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </link>

    <!-- sensor -->
    <xacro:property name="calibration" value="${xacro.load_yaml('$(arg config_dir)/sensor_kit_calibration.yaml')}"/>

    <!-- lidar -->
    <xacro:VLP-16 parent="sensor_kit_base_link" name="lidar" topic="/carla/ego_vihecle/lidar" hz="15" samples="220" gpu="$(arg gpu)">
      <origin
        xyz="${calibration['sensor_kit_base_link']['lidar']['x']}
             ${calibration['sensor_kit_base_link']['lidar']['y']}
             ${calibration['sensor_kit_base_link']['lidar']['z']}"
        rpy="${calibration['sensor_kit_base_link']['lidar']['roll']}
             ${calibration['sensor_kit_base_link']['lidar']['pitch']}
             ${calibration['sensor_kit_base_link']['lidar']['yaw']}"
      />
    </xacro:VLP-16>
    <!-- gnss -->
    <xacro:imu_macro
      name="gnss"
      parent="sensor_kit_base_link"
      namespace=""
      x="${calibration['sensor_kit_base_link']['gnss']['x']}"
      y="${calibration['sensor_kit_base_link']['gnss']['y']}"
      z="${calibration['sensor_kit_base_link']['gnss']['z']}"
      roll="${calibration['sensor_kit_base_link']['gnss']['roll']}"
      pitch="${calibration['sensor_kit_base_link']['gnss']['pitch']}"
      yaw="${calibration['sensor_kit_base_link']['gnss']['yaw']}"
      fps="100"
    />

    <!-- imu -->
    <xacro:imu_macro
      name="imu"
      parent="sensor_kit_base_link"
      namespace=""
      x="${calibration['sensor_kit_base_link']['imu']['x']}"
      y="${calibration['sensor_kit_base_link']['imu']['y']}"
      z="${calibration['sensor_kit_base_link']['imu']['z']}"
      roll="${calibration['sensor_kit_base_link']['imu']['roll']}"
      pitch="${calibration['sensor_kit_base_link']['imu']['pitch']}"
      yaw="${calibration['sensor_kit_base_link']['imu']['yaw']}"
      fps="100"
    />

    <!-- camera -->
    <xacro:monocular_camera_macro
      name="camera0/camera"
      parent="sensor_kit_base_link"
      namespace=""
      x="${calibration['sensor_kit_base_link']['camera0/camera_link']['x']}"
      y="${calibration['sensor_kit_base_link']['camera0/camera_link']['y']}"
      z="${calibration['sensor_kit_base_link']['camera0/camera_link']['z']}"
      roll="${calibration['sensor_kit_base_link']['camera0/camera_link']['roll']}"
      pitch="${calibration['sensor_kit_base_link']['camera0/camera_link']['pitch']}"
      yaw="${calibration['sensor_kit_base_link']['camera0/camera_link']['yaw']}"
      fps="30" 
      width="800"
      height="600"
      fov="90.0"
    />

    <!-- <xacro:monocular_camera_macro
      name="camera_info"
      parent="sensor_kit_base_link"
      namespace=""
      x="${calibration['sensor_kit_base_link']['camera_info']['x']}"
      y="${calibration['sensor_kit_base_link']['camera_info']['y']}"
      z="${calibration['sensor_kit_base_link']['camera_info']['z']}"
      roll="${calibration['sensor_kit_base_link']['camera_info']['roll']}"
      pitch="${calibration['sensor_kit_base_link']['camera_info']['pitch']}"
      yaw="${calibration['sensor_kit_base_link']['camera_info']['yaw']}"
      fps="30" 
      width="800"
      height="600"
      fov="90.0"
    /> -->

  </xacro:macro>
</robot>
