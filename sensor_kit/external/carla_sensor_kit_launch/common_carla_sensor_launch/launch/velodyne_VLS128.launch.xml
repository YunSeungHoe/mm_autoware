<launch>
  <!-- Params -->
  <arg name="launch_driver" default="true"/>


  <arg name="vehicle_info_param_file"/>
  <arg name="vehicle_mirror_param_file"/>
  <arg name="use_pointcloud_container" default="false"/>
  <arg name="container_name" default="velodyne_node_container"/>
  <arg name="input" default="lidar"/>
  <arg name="output" default="outlier_filtered/pointcloud"/>
  

  <include file="$(find-pkg-share common_carla_sensor_launch)/launch/velodyne_node_container.launch.py">
    <arg name="vehicle_info_param_file" value="$(var vehicle_info_param_file)"/>
    <arg name="vehicle_mirror_param_file" value="$(var vehicle_mirror_param_file)"/>
    <arg name="use_intra_process" value="true"/>
    <arg name="use_multithread" value="true"/>
    <arg name="use_pointcloud_container" value="$(var use_pointcloud_container)"/>
    <arg name="container_name" value="$(var container_name)"/>
    <arg name="input_pointcloud" value="$(var input)"/>
    <arg name="output_pointcloud" value="$(var output)"/>
  </include>

</launch>
